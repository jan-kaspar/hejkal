<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Hejkal.MainPage">
			 
	<ScrollView>
		<VerticalStackLayout Padding="0,20" Spacing="25" >

		<SearchBar x:Name="SearchBar" Placeholder="Zadej číslo písně nebo část názvu..." PlaceholderColor="Gray"
			IsTextPredictionEnabled="False"
			HorizontalOptions="FillAndExpand"
			SearchButtonPressed="SearchBar_SearchButtonPressed" />

		<Button x:Name="ShowAllButton"
				Text="... nebo zobraz všechny písně"
				Clicked="ShowAllButton_Clicked"
				HorizontalOptions="Center" />

		<Label x:Name="VersionLabel" FontSize="10" Text="version" />

		</VerticalStackLayout>
	</ScrollView>
 
</ContentPage>
